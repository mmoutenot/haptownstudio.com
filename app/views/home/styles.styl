.titlePage, .rogerPage, .gearPage
  height 800px
  position relative
  background-size cover
  background-position center

.titlePage
  background-image url("app/assets/images/Entrance.jpg")

  .titleContainer
    display flex
    align-items center
    justify-content center
    flex-direction column
    position absolute
    height 100%
    width 100%
    text-align center

  h1
    font-size 8rem

  @media screen and (max-width 850px)
    h1
      font-size 5rem

  h2
    font-size 2.5rem
    color white
    text-shadow 0 .2rem .8rem black

  .spotifyPlayer
    position fixed
    top 1rem
    right 1rem
    z-index 100
    border none
    box-shadow 0 .2rem .8rem black

.rogerPage
  background-image url("app/assets/images/Roger.jpg")
  box-shadow inset 0 -30rem 10em rgba(black, .8)

  .contentContainer
    position absolute
    left 4rem
    right 4rem
    bottom 2rem
    max-width 800px

  h1
    color white

  p
    color white

    a
      text-decoration underline

  a:hover
    color CornflowerBlue

.gearPage
  .slider
    z-index -1
    position absolute
    top 0
    left 0
    max-height 100%
    width 100%

    .sliderImage
      height 800px
      width 100%
      background-size cover
      background-position center

  .overlay
    position absolute
    height 100%
    width 100%
    box-shadow inset 10rem -10rem 20em rgba(black, 1)

  .gearList
    position absolute
    bottom 4rem
    left 4rem

  h2, h3
    color white

  ul
    padding 0
    margin 0 0 2rem

    li
      list-style-type none
      color white

.footer
  background-color black
  display flex
  align-items center
  justify-content center
  padding 4rem
  color white

  a:hover
    color CornflowerBlue
